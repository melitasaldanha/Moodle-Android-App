<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/ques"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:hint="Enter ques"
        android:inputType="textMultiLine"
        android:paddingLeft="5dp"
        android:paddingRight="0dp"
        android:scrollHorizontally="true"
        android:textSize="20dp"
        app:layout_constraintRight_toLeftOf="@+id/marks" />

    <EditText
        android:id="@+id/marks"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-8dp"
        android:layout_toEndOf="@+id/ques"
        android:hint="Marks"
        android:inputType="numberDecimal"
        android:scrollHorizontally="true"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@+id/ques"
        app:layout_constraintRight_toLeftOf="@+id/delete_ques" />

    <ImageButton
        android:id="@+id/delete_ques"
        android:layout_width="48dp"
        android:layout_height="47dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/ques"
        android:background="@android:drawable/ic_delete"
        android:clickable="true"
        android:paddingTop="5dp"
        android:scaleType="centerInside"
        app:layout_constraintLeft_toRightOf="@+id/out_of"
        app:srcCompat="@android:drawable/ic_delete" />

</RelativeLayout>